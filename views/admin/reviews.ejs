			<div class="container">
				<div class="row">
					<div class="col-12 col-lg-8 col-xl-8">
						<!-- content tabs -->
						<div class="tab-content" id="myTabContent">

							<div class="tab-pane fade  show active" id="tab-1" role="tabpanel" aria-labelledby="1-tab">
								<div class="row">
									<!-- reviews -->
									<div class="col-12">
										<div class="reviews">
											<ul class="reviews__list">
												<% for(var i=0; i<reviews.length; i++) {%>
													<li class="reviews__item">
														<div class="reviews__autor">
															<img class="reviews__avatar" src="/public/img/user.png"
																alt="">
															<span class="reviews__name">
																<%= reviews[i].title %>
															</span>
															<span class="reviews__time">
																<%= reviews[i].created.getDate() %>.<%=
																		reviews[i].created.getMonth()+ 1 %>.<%=
																			reviews[i].created.getFullYear() %>, <%=
																				reviews[i].created.getHours() %>:<%=
																					reviews[i].created.getMinutes() %>
																					by <%= reviews[i].user.nickname %>
															</span>

															<span class="reviews__rating"><i
																	class="icon ion-ios-star"></i>
																<%= reviews[i].rating %>
															</span>
														</div>
														<p class="reviews__text">
															<%= reviews[i].description %>
														</p>
														<div class="comments__actions">
															<form method="post" class="comments__rate">

																<% if(reviews[i].status !='approved' ){%>
																	<button class="comments__rate_button_first"
																		type="submit"
																		formaction="/admin/review/update/approved">
																		<i
																			class="icon ion-md-checkmark comments__rate_i_first"></i>
																	</button>
																	<% } %>

																		<% if(reviews[i].status !='declined' ){%>
																			<button class="comments__rate_button_last"
																				type="submit"
																				formaction="/admin/review/update/declined">
																				<i
																					class="icon ion-md-close comments__rate_i_last"></i>
																			</button>
																			<% } %>

																				<input type="hidden" name="reviewId"
																					value="<%= reviews[i]._id %>">

															</form>

															<span
																style="font-size: 13px;color: rgba(255, 255, 255, 0.5);font-weight: 300;line-height: 20px; margin-right: 20px;">Status:
																<%= reviews[i].status %>
															</span>

															<a href="/pages/movie/<%= reviews[i].movie._id %>">
																<button type="button"><i
																		class="icon ion-ios-film"></i>Movie</button>
															</a>

														</div>
													</li>
													<% } %>
											</ul>

										</div>
									</div>
									<!-- end reviews -->
								</div>
							</div>
						</div>
						<!-- end content tabs -->
